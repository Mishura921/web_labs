@page
@model DetailsModel
@{
	ViewData["Title"] = "Детали рецепта";
}
<h1>@ViewData["Title"]</h1>
<div>
    <h4>@Model.Recipe.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Title)
        </dd>
        <dt class="col-sm-2">
           Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Description)
        </dd>

          <dt class="col-sm-2">
            Рецепт
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeText)
        </dd>

        <dt class="col-sm-2">
            Изображение
        </dt>
         <dd class="col-sm-10">
           @if (!string.IsNullOrEmpty(Model.Recipe.ImageUrl))
                {
                    <img src="@Model.Recipe.ImageUrl" style="max-width:300px" />
                }
             </dd>

         <dt class="col-sm-2">
           Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.DatePrepared)
        </dd>
         <dt class="col-sm-2">
            Рейтинг
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Rating)
        </dd>
         <dt class="col-sm-2">
            Комментарии
        </dt>
          <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Comments)
        </dd>
         <dt class="col-sm-2">
          Кол-во порций
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.NumberOfServings)
        </dd>

         <dt class="col-sm-2">
             Стоимость порции
        </dt>
        <dd class="col-sm-10">
            @Model.Recipe.CostPerServing.ToString("0.00")
        </dd>
           <dt class="col-sm-2">
            Ингредиенты
        </dt>
        <dd class="col-sm-10">
             <table class="table">
                 <thead>
                     <tr>
                        <th>Название</th>
                        <th>Кол-во (гр)</th>
                        <th>Стоимость</th>
                     </tr>
                 </thead>
                 <tbody>
                     @foreach (var item in Model.Recipe.Ingredients)
                     {
                         <tr>
                             <td>@item.Name</td>
                             <td>@item.Quantity</td>
                             <td>@item.Cost</td>
                         </tr>
                     }
                 </tbody>
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.Id">Редактировать</a> |
    <a asp-page="./Index">Назад к списку</a>
</div>
