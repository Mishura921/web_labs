@page
@model Lab_7.Pages.IndexModel
@{
    ViewData["Title"] = "Кулинарная книга общаги";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Добавить новый рецепт</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Дата</th>
            <th>Оценка</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model.Recipes)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>@recipe.DatePrepared.ToShortDateString()</td>
                <td>@recipe.Rating</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@recipe.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                    <a asp-page="./Edit" asp-route-id="@recipe.Id" class="btn btn-info">Редактировать</a> |
                    <a asp-page="./Details" asp-route-id="@recipe.Id">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>